{
    "variables": {
        "cpus": "2",
        "memory_size": "2048",
        "disk_size": "256000",
        "iso_file": "windows10.iso",
        "iso_checksum_type": "sha1",
        "iso_checksum": "EA214EE684A5BB8230707104C54A3B74D92F1D69",
        "cloud_token": "{{env `ACCESSKEY`}}"
    },
    "builders": [{
        "type": "virtualbox-iso",
        "iso_url": "{{user `iso_file`}}",
        "iso_checksum_type": "{{user `iso_checksum_type`}}",
        "iso_checksum": "{{user `iso_checksum`}}",
		"vm_name": "win10",
		"output_directory": "output/win10",
        "vboxmanage": [
            [ "modifyvm", "{{.Name}}", "--memory", "{{user `memory_size`}}" ],
            [ "modifyvm", "{{.Name}}", "--vram", "48" ],
            [ "modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}" ],
            [ "modifyvm", "{{.Name}}", "--clipboard", "bidirectional" ],
            [ "modifyvm", "{{.Name}}", "--draganddrop", "bidirectional" ]  
        ],
        "headless": "true",
        "boot_wait": "2m",
		"communicator": "winrm",
        "winrm_username": "vagrant",
        "winrm_password": "vagrant",
		"winrm_timeout": "12h",
		"winrm_port": "5985",
        "shutdown_command": "shutdown /s /t 10 /f /d p:4:1",
		"shutdown_timeout": "1h",
		"guest_additions_mode": "attach",
		"guest_additions_path": "VBoxGuestAdditions.iso",        
		"guest_os_type": "Windows10_64",
        "disk_size": "{{user `disk_size`}}",
        "floppy_files": [
            "Autounattend.xml",
			"winrm.ps1"
        ]
	}],
	"provisioners": [
        {
            "type": "powershell",
            "inline": ["echo {{user `cloud_token`}}"],
            "elevated_user": "vagrant",
            "elevated_password": "vagrant"
        },
        {
            "type": "powershell",
            "script": "install-oracle-guest-additions.ps1",
            "elevated_user": "vagrant",
            "elevated_password": "vagrant"
        },
        {
            "type": "powershell",
            "script": "enable-rdp.ps1",
            "elevated_user": "vagrant",
            "elevated_password": "vagrant"
        },
        {
            "type": "powershell",
            "script": "software.ps1",
            "elevated_user": "vagrant",
            "elevated_password": "vagrant"
        },
        {
            "type": "powershell",
            "script": "minimize-disk-writes.ps1",
            "elevated_user": "vagrant",
            "elevated_password": "vagrant"
        },
        {
            "type": "powershell",
            "script": "ngen.ps1",
            "elevated_user": "vagrant",
            "elevated_password": "vagrant",
            "valid_exit_codes": [0, 4294967295]
        },
        {
            "type": "powershell",
            "script": "clean-and-defrag.ps1",
            "elevated_user": "vagrant",
            "elevated_password": "vagrant"
        }
    ],
    "post-processors": [{
        "type": "vagrant",
        "keep_input_artifact": false,
        "output": "windows10.box"
    }]

}


